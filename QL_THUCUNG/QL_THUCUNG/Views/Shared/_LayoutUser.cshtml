
@using QL_THUCUNG.Helpers

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BEST FRIEND PET HOTEL</title>
    <link rel="stylesheet" href="~/Content/trangchu.css">
    <link rel="stylesheet" href="~/Content/bootstrap-5.1.3-dist/css/bootstrap.min.css">
    <script src="~/Content/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/fontawesome-free-6.1.1-web/js/all.min.js"></script>
</head>
<body>
    <div class="menu">
        <div class="content-menu d-flex justify-content-center flex-column flex-shrink-0 text-white p-2">
            <div class="d-flex name-net">
                <i class="fa-solid fa-paw me-1"></i>
                <h4 class="m-0 ms-1">BF - PET HOTEL</h4>
            </div>
            <ul class="myDIV nav nav-pills flex-column mb-auto">
                <li class="menubtn">
                    <a href="~/HomeUser/Trangchu" class="menuitem
                       @Html.IsActive("HomeUser","Trangchu")">
                        <div class="item">
                            <i class="fa-solid fa-house"></i>
                            <div class="ms-4">TRANG CHỦ</div>
                        </div>
                    </a>
                </li>

                <li class="menubtn">
                    <a href="~/HomeUser/GoiDV" class="menuitem
                       @Html.IsActive("HomeUser","GoiDV")
                       @Html.IsActive("SanPham","SanPham")
                       ">
                        <div class="item">
                            <i class="fa-solid fa-plate-wheat"></i>
                            <div class="ms-4">DỊCH VỤ</div>
                        </div>
                    </a>
                </li>
                <li class="menubtn">
                    <a href="~/HomeUser/TinNhan" class="menuitem
                       @Html.IsActive("HomeUser","TinNhan")">
                        <div class="item">
                            <i class="fa-brands fa-facebook-messenger"></i>
                            <div class="ms-4">NHẮN TIN </div>
                        </div>
                    </a>
                </li>
            </ul>
            <div class="dropdown border-top border-light p-3">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                   id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="~/Images/avatar1.jpg" alt="" width="32" height="32" class="rounded-circle me-2">
                    <strong>@Html.Action("Trangchupatirial", "HomeUser")</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="@Url.Action("DangXuat", "DangNhap")">Đăng xuất</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="content-content">
            @RenderBody()
        </div>
    </div>
</body>
</html>



