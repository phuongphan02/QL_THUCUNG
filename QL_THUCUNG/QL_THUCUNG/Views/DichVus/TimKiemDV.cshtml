
@model IEnumerable<QL_THUCUNG.Models.DichVu>

@{
    ViewBag.Title = "TimKiemNC";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
            margin: 10px;
        }
    </style>
</head>
<body>
    <h2 class="text-center m-3">TÌM KIẾM DỊCH VỤ</h2>
    <div class="m-2">
        @using (Html.BeginForm("TimKiemDV", "DichVus", FormMethod.Get))
        {
            @Html.AntiForgeryToken()

            <table class="table1" align="center">
                <tr>
                    <td>Mã Dịch vụ</td>
                    <td><input type="text" name="ID_DV" value="@ViewBag.ID_DV" /></td>
                </tr>
                <tr>
                    <td>Tên dịch vụ</td>
                    <td><input type="text" name="TenDV" value="@ViewBag.TenDV" /></td>
                </tr>
                <tr>
                    <td>Ảnh sản phẩm</td>
                    <td><input type="text" name="AnhSP" value="@ViewBag.AnhSP" /></td>
                </tr>
                <tr>
                    <td>Giá bán</td>
                    <td><input type="text" name="GiaBan" value="@ViewBag.GiaBan" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="submit" value="Tìm kiếm" style="margin-left: 5px;width:100px;background-color: blue;color:white" />
                        <input type="button" name="Nhapmoi" value="Nhập mới" style="margin-left: 5px;width:100px;background-color: blue;color:white" onclick="location.href='@Url.Action("TimKiemDV", "DichVus")'" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
            columns: new[]
            {
                grid.Column("ID_DV", "Mã Dịch vụ"),
                grid.Column("TenDV", "Tên dịch vụ"),
                grid.Column("AnhSP", "Ảnh sản phẩm"),
                grid.Column("GiaBan", "Giá bán", format: (item) => string.Format("{0:N0}", item.GiaBan)),
                grid.Column("Chức năng", format: @<text>
    <a href="@Url.Action("Edit", new { id = item.ID_DV })" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
    <a href="@Url.Action("Details", new { id = item.ID_DV })" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></a>
    <a href="@Url.Action("Delete", new { id = item.ID_DV })" class="edit-btn"><abbr title="Xóa dữ liệu"><img src="/images/delete.png" width="20" height="20" /></abbr></a>
                </text>)
     })
    </div>
</body>
</html>

