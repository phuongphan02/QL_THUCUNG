<h2>GIỎ HÀNG</h2>
<div class="d-flex justify-content-center align-items-center flex-column ">
    <table class="table table-hover w-75 " id="giohang">
        <thead>
            <tr>
                <th>
                    Mã sản phẩm
                </th>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Ảnh sản phẩm
                </th>

                <th>
                    Đơn giá
                </th>

                <th>
                    Số lượng
                </th>
                <th>
                    Thành tiền
                </th>
            </tr>
        </thead>
        <tbody style="border-bottom: 0;">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item._MaSP
                    </td>
                    <td>
                        @item.tenSP
                    </td>
                    <td>
                        <img src="@Url.Content("~/Images/"+ item.AnhSP)" width="50" height="50" />
                    </td>
                    <td>
                        @String.Format("{0:0,0}", item.DonGia) VNĐ
                    </td>
                    <td>
                        @item.SoLuong
                    </td>
                    <td>
                        @String.Format("{0:0,0}", item.ThanhTien) VNĐ
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-end align-content-end w-75">
        <a href="~/SanPham/SuaSoLuong" class="btn btn-primary me-2">Sửa giỏ hàng</a>
        @using (Html.BeginForm("GoiSanPham", "SanPham"))
        {
            <input type="submit" class="btn btn-success" value="Gọi dịch vụ" onclick="showSuccessMessage()" />
        }
    </div>
</div>
<script>
    function showSuccessMessage() {
        alert("Đã thêm sản phẩm từ giỏ hàng thành công!");
    }
</script>