@using QL_THUCUNG.Models
@model List<CTTTDV>
@{
    Layout = null;
}

<table class="table table-hover w-75 " id="giohang">
    <thead>
        <tr>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Ảnh sản phẩm
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Giá bán
            </th>
            <th>
                Thành tiền
            </th>
        </tr>
    </thead>
    <tbody style="border-bottom: 0;">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.DichVu.TenDV
                </td>
                <td>
                    <img src="@Url.Content("~/Images/"+ item.DichVu.AnhSP)" width="50" height="50" />
                </td>
                <td>
                    @item.Soluong
                </td>
                <td>
                    @String.Format("{0:0,0}", item.DichVu.GiaBan) VNĐ
                </td>
                <td>
                    @item.Gia
                </td>

            </tr>
        }
    </tbody>
</table>